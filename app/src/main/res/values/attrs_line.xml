<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineChart">
        <attr name="line_arrayColor" format="reference" />

        <attr name="line_axisColor" format="color" />
        <attr name="line_axisShow" format="boolean" />
        <attr name="line_axisWidth" format="dimension" />

        <attr name="line_chartShow" format="boolean" />

        <attr name="line_fillingBottomColor" format="color" />
        <attr name="line_fillingTopColor" format="color" />
        <attr name="line_fillingShow" format="boolean" />

        <attr name="line_fillingStyle" format="enum" >
            <enum name="uniform" value="0"/>
            <enum name="gradient" value="1"/>
        </attr>

        <attr name="line_iconShow" format="boolean"/>
        <attr name="line_iconSize" format="dimension"/>
        <attr name="line_iconTop" format="boolean"/>

        <attr name="line_labelColor" format="color"/>
        <attr name="line_labelSize" format="dimension"/>
        <attr name="line_labelText" format="string"/>

        <attr name="line_lineColor" format="color"/>
        <attr name="line_lineLength" format="dimension"/>
        <attr name="line_lineWidth" format="dimension"/>
        <attr name="line_lineStartZero" format="boolean"/>

        <attr name="line_markZeroAllHeight" format="boolean"/>
        <attr name="line_markZeroColor" format="color"/>
        <attr name="line_markZeroShow" format="boolean"/>
        <attr name="line_markZeroWidth" format="dimension"/>

        <attr name="line_pointColor" format="color"/>
        <attr name="line_pointRadius" format="dimension"/>
        <attr name="line_pointShow" format="boolean"/>

        <attr name="line_textAxisColor" format="color"/>
        <attr name="line_textAxisShow" format="boolean" />
        <attr name="line_textAxisSize" format="dimension"/>
        <attr name="line_textAxisTop" format="boolean" />

        <attr name="line_textColor" format="color"/>
        <attr name="line_textOnLine" format="boolean"/>
        <attr name="line_textSize" format="dimension"/>
        <attr name="line_textShow" format="boolean"/>
        <attr name="line_textString" format="boolean"/>

    </declare-styleable>
</resources>